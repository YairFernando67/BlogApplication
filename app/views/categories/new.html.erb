<h2>Create a new Category</h2>


<%= render 'shared/errors', obj: @category %>
  <%= form_for(@category, :html => {class: "", row: ""}) do |f| %>
      <div class="form-group">
        <%= f.label :category %> 
        <%= f.text_field :name, class:"form-control", placeholder: "Enter category name", autofocus: true %>
      </div>
      <div class="btnTwo">
        <%= f.submit id: "form" %> 
        <%= link_to 'Back to the list', articles_path, class:"btn btn-primary ml20 fit" %> 
      </div>
  <% end %>