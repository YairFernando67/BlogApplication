<div class="container">
  <div class="form">
      <%= render 'shared/errors', obj: @article %>


    <%= form_for(@article, :html => {class: "", row: ""}) do |f| %>
      <div class="form-group">
        <%= f.label :title %> 
        <%= f.text_field :title, class:"form-control", placeholder: "Title of article", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :description %> 
        <%= f.text_area :description, class:"form-control", placeholder: "Body of article"%>
      </div>
      <div class="btnTwo">
        <%= f.submit id: "form" %> 
        <%= link_to 'Back to the list', articles_path, class:"btn btn-primary ml20 fit" %> 
      </div>
    <% end %>
  </div>
</div>
