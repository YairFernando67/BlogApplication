<div class="container">
  <div class="form">
      <% if @article.errors.any? %>
      <h4>The following erros prevented the article from getting created</h4>
      <% @article.errors.full_messages.each do |msg| %>
      <ul>
        <li><%= msg %></li>
      </ul>
      <% end %> 
      <% end %> 
    <%= form_for @article do |f| %>
    
    <div class="form-group">
      <%= f.label :title %> 
      <%= f.text_field :title, class:"form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :description %> 
      <%= f.text_area :description, class:"form-control"%>
    </div>
    
      <%= f.submit %>
      <%= link_to 'Back to the list', articles_path, class:"btn btn-primary ml20" %>
    
    <% end %> 

  </div>
</div>
