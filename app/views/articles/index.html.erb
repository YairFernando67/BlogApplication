<div class="container">
  <%= link_to "New Article", new_article_path, class: "btn btn-primary new" %>
  <div class="newArticle" id="cardArticle">
    <% @articles.each do |article| %>
    <div class="row article" >
        <div class="thumbnail">
          <div class="favorites">
            <a href="#" >
              <i class="glyphicon glyphicon-star-empty fav"></i>
            </a>
          </div>
          <span class="data-id"><%= article.id %></span>
          <h3><%= link_to article.title, article_path(article) %></h3>
          <p><%= truncate(article.description, length: 400) %></p>
          <div class="caption">
            <div class="buttons">
              <%= link_to 'Edit', edit_article_path(article) %>
              <%= link_to 'Show', article_path(article) %>
              
                <%= link_to 'Delete', article_path(article), method: :delete,
                data:{confirm: "Are you sure?"} %>
              
            </div>
          </div>
        </div>
    </div>
    <% end %>
  </div>
</div>

<script>
  new addArticle();
</script>