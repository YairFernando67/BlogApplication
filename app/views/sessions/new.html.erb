<div class="container">
  <div class="form">
    <h2 class="mt15">Log In &blacktriangleright;</h2>
    <%= form_for(:session, :html => {class: "width50", row: ""}, url: login_path) do |f| %>
    <div class="form-group">
      <%= f.label :email %> 
      <%= f.email_field :email, class:"form-control", placeholder: "Enter email", autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.label :password %> 
      <%= f.password_field :password, class:"form-control", autocomplete: "off" %>
    </div>
    <div class="btnTwo">
      <%= f.submit "Log In", id: "form" %> 
      <%= link_to 'Back to the list', articles_path, class:"btn btn-primary ml20 fit" %> 
    </div>
    <% end %>
  </div>
</div>