<div class="container">
  <div class="form">
    <h2 class="mt15">Log In &blacktriangleright;</h2>
    <%= form_for(:session, :html => {class: "width50 formLogIn", row: ""}, url: login_path) do |f| %>
    <div class="login">
        <div class="logoSignUp">
          <span> <\CODE\> </span>
        </div>
        <div class="title">
          APPBLOG
        </div>
        <div class="sub-title">
          Keep up!!
        </div>
        <div class="fields">
          <div class="form-group">
            <%= f.label :email %> 
            <i class="fa fa-envelope-o" rel="email"></i>
            <%= f.email_field :email,rel:"email", class:"email", placeholder: "Enter email", autofocus: true %>
          </div>
          <div class="form-group">
            <%= f.label :password %> 
            <i class="fa fa-lock" rel="pass"></i>
            <%= f.password_field :password,rel:"pass" , class:"password", placeholder: "Enter password", autocomplete: "off" %>
          </div>
        </div>
        <div class="flex">
          <%= f.submit "Log In", id: "", class: "btnSubmit" %> 
          <%= link_to 'Back to the list', articles_path, class:"backList" %> 
        </div>
    </div>
    <% end %>
  </div>
</div>